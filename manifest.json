{
    "manifest_version": 3,
    "name": "NovelAI Assistant",
    "version": "1.0",
    "description": "Select images on NovelAI with arrow keys",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "permissions": [
      "activeTab","storage"
    ],
    "content_scripts": [
      {
        "matches": ["https://novelai.net/image"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  